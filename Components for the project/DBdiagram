Table Roles {
  roles_id int [primary key, increment]
  role_name varchar(20) [not null]
}

Table User {
  user_id int [primary key, increment]
  username varchar(20) [not null]
  password varchar(100) [not null]
  mail varchar(30) [not null]
  phone varchar(20) [not null]
  role_id int [ref: > Roles.roles_id]
}

Table Image {
  image_id int [primary key, increment]
  filename varchar(255) [not null]
  coordinates_x number [not null]
  coordinates_y number [not null]
  user_id int [ref: > User.user_id]
  tag_id int [ref: > Tag.tag_id]
}

Table Save {
  id int [primary key, increment]
  user_id int [ref: > User.user_id]
  image_id int [ref: > Image.image_id]
}

Table Tag {
  tag_id int [primary key, increment]
  name varchar(25) [not null]
}

Table ClothingType {
  clothing_type_id int [primary key, increment]
  name varchar(20) [not null]
}

Table Clothing {
  clothing_id int [primary key, increment]
  size number [not null]
  color int [not null]
  clothing_type_id int [ref: > ClothingType.clothing_type_id]
}

Table Location {
  location_id int [primary key, increment]
  name varchar(20) [not null]
}

Table ClothingDesign {
  clothing_design_id int [primary key, increment]
  image_id int [ref: > Image.image_id]
  clothing_id int [ref: > Clothing.clothing_id]
  location_id int [ref: > Location.location_id]
}

Table Subscraib {
  subscraib_id int [primary key, increment]
  folower_user_id int [ref: > User.user_id]
  target_user_id int [ref: > User.user_id]
}

Table Notification {
  notification_id int [primary key, increment]
  message varchar(255) [not null]
  timestamp data [not null]
  subscraib_id int [ref: > Subscraib.subscraib_id]
}
